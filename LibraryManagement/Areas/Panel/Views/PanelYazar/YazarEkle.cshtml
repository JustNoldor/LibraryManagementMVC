
@{
    ViewBag.Title = "YazarEkle";
    Layout = "~/Areas/Panel/Views/Shared/_LayoutPanel.cshtml";
}

<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Yazar Ekleme Formu</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form class="form-horizontal" action="/PanelYazar/Ekle" method="post" enctype="multipart/form-data">
        <div class="box-body">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Yazar Adı</label>

                <div class="col-sm-10">
                    <input type="text" name="YazarAdi" class="form-control" id="exampleInputEmail2" placeholder="Yazar Adı giriniz">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Yazar Soyadı</label>

                <div class="col-sm-10">
                    <input type="text" name="YazarSoyadi" class="form-control" id="exampleInputPassword2" placeholder="Yazar Soyadı giriniz">
                </div>
            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-default">İptal Et</button>
            <input type="submit" name="name" class="btn btn-success mr-2" value="Yazar Ekle" />
        </div>
        <!-- /.box-footer -->
    </form>
</div>

