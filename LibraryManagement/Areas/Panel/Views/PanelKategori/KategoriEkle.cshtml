
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Areas/Panel/Views/Shared/_LayoutPanel.cshtml";
}

<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Kategori Ekleme Formu</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form class="form-horizontal" action="/PanelKategori/Ekle" method="post" enctype="multipart/form-data">
        <div class="box-body">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Kategori Adı</label>

                <div class="col-sm-10">
                    <input type="text" name="KategoriAdi" class="form-control" id="exampleInputEmail2" placeholder="Kategori Adı giriniz">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Açıklama</label>

                <div class="col-sm-10">
                    <input type="text" name="KategoriAciklama" class="form-control" id="exampleInputPassword2" placeholder="Kategori Açıklaması giriniz">
                </div>
            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-default">İptal Et</button>
            <input type="submit" name="name" class="btn btn-success mr-2" value="Kategori Ekle" />
        </div>
        <!-- /.box-footer -->
    </form>
</div>
