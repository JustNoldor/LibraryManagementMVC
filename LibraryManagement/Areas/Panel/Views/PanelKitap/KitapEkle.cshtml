
@{
    ViewBag.Title = "KitapEkle";
    Layout = "~/Areas/Panel/Views/Shared/_LayoutPanel.cshtml";
}

<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Kitap Ekleme Formu</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form class="form-horizontal" action="/PanelKitap/Ekle" method="post" enctype="multipart/form-data">
        <div class="box-body">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">ISBN</label>
                <div class="col-sm-10">
                    <input type="text" name="ISBN" class="form-control" id="exampleInputEmail2" placeholder="ISBN giriniz">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Kitap Adı</label>

                <div class="col-sm-10">
                    <input type="text" name="KitapAdi" class="form-control" id="exampleInputPassword2" placeholder="Kitap Adı giriniz">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Kitap Açıklama</label>

                <div class="col-sm-10">
                    <input type="text" name="KitapAciklama" class="form-control" id="exampleInputPassword2" placeholder="Kitap Açıklaması giriniz">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Kitap Yazar No</label>

                <div class="col-sm-10">
                    <input type="text" name="KitapYazarId" class="form-control" id="exampleInputPassword2" placeholder="Kitap Yazar No giriniz">
                </div>
            </div>

            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Kitap Yazar No</label>
                <div class="col-sm-10">
                    <select class="form-control" name="KategoriID">
                        @foreach (LibraryManagement.Models.Kategori item in ViewBag.Kategoriler)
                        {
                            <option value="@item.KategoriID">
                                @item.KategoriAdi
                            </option>

                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Adet</label>
                <div class="col-sm-10">
                    <input type="text" name="Adet" class="form-control" id="exampleInputPassword2" placeholder="Adet giriniz">
                </div>
            </div>


        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-default">İptal Et</button>
            <input type="submit" name="name" class="btn btn-success mr-2" value="Kitap Ekle" />
        </div>
        <!-- /.box-footer -->
    </form>
</div>

